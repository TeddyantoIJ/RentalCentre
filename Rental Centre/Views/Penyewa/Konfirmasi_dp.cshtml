        $("#forminput").submit(function (event) {
            var fd = new FormData();
            var gambar = document.getElementById("bukti_pembayaran");
            if (gambar.value == null) {
                return;
            }
            fd.append(gambar.files[0].name, gambar.files[0]);

            var xhr = new XMLHttpRequest();
