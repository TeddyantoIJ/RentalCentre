@model Rental_Centre.Models.mspenyewa

@{
    ViewBag.Title = "cek_saldo";
    Layout = "~/Views/Shared/_PenyewaTemplate.cshtml";
}

<br />
<div class="container">
    <div class="card text-center shadow">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link active" href="cek_saldo">Cek saldo</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="transfer">Transfer</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="top_up">Top up</a>
                </li>
                <li class="nav-item">
