                </li>
                <li class="nav-item">
                    <a class="nav-link" href="lihat_mutasi">Lihat mutasi</a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <p style="font-size:30px">SALDO PADA AKUN ANDA</p>
                    @{
                        string saldo = String.Format("{0:c}", Model.saldo);
                    }                    
                    <p style="font-size:100px">@saldo</p>
                </div>
            </div>
        </div>
    </div>
</div>
