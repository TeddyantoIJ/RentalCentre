@model Rental_Centre.Models.msadmin
@{
    ViewBag.Title = "view_admin";
    Layout = "~/Views/Shared/_AdminTemplate.cshtml";
}
<style>
    #tr {
        border: 0;
        outline: 0;
        background: transparent;
        border-bottom: 3px solid grey;
        width: inherit;
    }
</style>
<style>
    /* The Modal (background) */
    .modal {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        padding-top: 100px; /* Location of the box */
        left: 0;
        top: 0;
        width: 100%; /* Full width */
        height: 100%; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0,0.9); /* Black w/ opacity */
    }

    /* Modal Content (Image) */
    .modal-content {
        margin: auto;
        display: block;
        width: 80%;
        max-width: 700px;
    }

    /* Caption of Modal Image (Image Text) - Same Width as the Image */
    #caption {
        margin: auto;
        display: block;
        width: 80%;
        max-width: 700px;
        text-align: center;
        color: #ccc;
        padding: 10px 0;
        height: 150px;
    }

    /* Add Animation - Zoom in the Modal */
    .modal-content, #caption {
        animation-name: zoom;
        animation-duration: 0.6s;
    }

    /* The Close Button */
    .close {
        position: absolute;
        top: 15px;
        right: 35px;
        color: #f1f1f1;
        font-size: 40px;
        font-weight: bold;
        transition: 0.3s;
    }

        .close:hover,
        .close:focus {
            color: #bbb;
            text-decoration: none;
            cursor: pointer;
        }
</style>
<br />
<div class="card">
    <div class="card-body">
        <div class="card-header"><center><h3>@Model.nama_admin</h3></center></div>
        <br />        
        <div class="row">
            <div class="col-md-4">                
                <img src="~/Content/RoleAdmin/img/@Model.profil" alt="Profil" class="card-img" onclick="modal(this.src,'Profil')" style="cursor:pointer" />
            </div>
            <div class="col">
                <div class="row">
                    <div class="col-3">
                        Nama
                    </div>
                    <div class="col">
                        <label>: @Model.nama_admin</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        Username
                    </div>
                    <div class="col">
                        <label>: @Model.username</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        Password
                    </div>
                    <div class="col">
                        <label>: *****@Model.password.Substring(3)</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        Jenis kelamin
                    </div>
                    <div class="col">
                        @{
                            if (Model.jenis_kelamin == 0)
                            {
                                <label>: Laki - laki</label>
                            }
                            else
                            {
                                <label>: Perempuan</label>
                            }
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        Email
                    </div>
                    <div class="col">
                        <label>: @Model.email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        Tempat lahir
                    </div>
                    <div class="col">
                        <label>: @Model.tempat_lahir</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        Tanggal lahir
                    </div>
                    <div class="col">
                        <label>: @Model.tgl_lahir.ToString("dd MMM yyyy")</label>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <script>
            document.write('<a href="' + document.referrer + '" class="btn btn-secondary">Kembali</a>');
        </script>
        <a href="@Url.Action("edit_admin", "Admin",new { id = Model.id_admin })" class="btn btn-primary">Edit data</a>
    </div>
</div>

<div id="myModal" class="modal" onclick="tutup()">
    <span class="close" onclick="tutup()">&times;</span>
    <img class="modal-content" id="img01">
    <div id="caption"></div>
</div>
<script>
    function batal() {
        document.getElementById("div_konfirmasi").hidden = true;
        document.getElementById("div_view").hidden = false;
    }
    function modal(img, caption) {
        document.getElementById("myModal").style.display = "block";
        document.getElementById("img01").src = img;
        document.getElementById("caption").innerHTML = caption;
    }
    function tutup() {
        document.getElementById("myModal").style.display = "none";
    }
</script>
