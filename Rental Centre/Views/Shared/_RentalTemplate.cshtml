                                    @if (Session["pesan"] != null)
                                    {
                                        int i = 0;
                                        foreach (var item in Session["pesan"] as List<Rental_Centre.Models.dtchat>)
                                        {
                                            if (i == 5)
                                            {
                                                break;
                                            }
                                            <a class="dropdown-item d-flex align-items-center" href="@Url.Action("Obrolan","Rental")">
                                                <div class="font-weight-bold">
                                                    <div class="text-truncate">
                                                        @item.isi_pesan
                                                    </div>
                                                    <div class="small text-gray-500">@item.username_pengirim | @item.creadate.ToString("HH:mm • dd MMM")</div>
                                                </div>
                                            </a>
                                            i++;
                                        }
                                    }
                                </div>
