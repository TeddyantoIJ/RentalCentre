<script>
    setInterval(function () {
        getjumlahpesan();
        getpesan();
    }, 1000);

    function check() {
        var fd = new FormData();
        var xhr = new XMLHttpRequest();
        xhr.open('POST', '/Rental/check');
        xhr.send(fd);
        xhr.onreadystatechange = function () {
            if (xhr.readyState == 4 && xhr.status == 200) {

            }
        }
    }
    function getjumlahpesan() {        
        $.ajax({
            type: "POST",
            url: "/Rental/getjumlahpesan",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                document.getElementById("jumlah_pesan").innerHTML = response;
            },
            failure: function (response) {

            },
            error: function (response) {

            }
        });
    }
    function getpesan() {                        
            $.ajax({
                type: "POST",
                url: "/Rental/getpesan",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {                    
                    var data = response.isi_pesan;
                    var pengirim = response.username_pengirim;
                    var waktu = response.username_penerima;                                                    
                    var baru = "<a class='dropdown-item d-flex align-items-center' href='http://localhost:51457/Rental/Obrolan' >"+
                        "<div class='font-weight-bold'>" +
                        "<div class='text-truncate'> " +
                        data
                        + " </div>" +
                        "<div class='small text-gray-500'> " + pengirim +" | " +waktu + " </div>" +
                        "</div>" +
                        "</a>";
                    if (response.isi_pesan != null) {
                        document.getElementById("pesan_notif").innerHTML = baru;
                    }                    
                },
                failure: function (response) {
                    
                },
                error: function (response) {
                    
                }
        });        
    }
</script>